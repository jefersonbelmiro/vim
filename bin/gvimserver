#!/bin/bash
#
# -----------------------------------------------------------------------------
# Abrir sempre na mesma janela
# -----------------------------------------------------------------------------
# alias gvim='gvim -geometry 120x40 --remote-tab-silent'

ANS=`pgrep -fx "gvim --servername GVIM"`

if [[ ! $ANS ]]; then
  gvim --servername GVIM
fi

# if [ -f $1 ]; then # verifica se primeiro parametro Ã© um arquivo
if [[ $1 ]]; then
  gvim --servername GVIM --remote-tab "${@}"
fi
